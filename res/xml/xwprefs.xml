<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/preferences" >

	<PreferenceCategory android:title="@string/androidplaylevel" >
    	<com.oliversride.wordryo.PrefPlayLevel
		android:key="androidplaylevel"
        android:defaultValue="0"
		android:layout="@layout/prefplaylevel" />
 	</PreferenceCategory>
    	
	<PreferenceCategory android:title="@string/pandp_settings" >
    	<CheckBoxPreference
			android:key="@string/key_init_hintsallowed"
            android:title="@string/hints_allowed"
            android:summary="@string/hints_allowed_sum"
            android:defaultValue="false"
            />

	    <com.oliversride.wordryo.PrefNumberOfPlayers
			android:key="numberofplayers"
        	android:defaultValue="2"
        	android:title="@string/pandp_numplayers"
			android:widgetLayout="@layout/prefpassandplay"
			/>
	    <com.oliversride.wordryo.XWEditTextPreference 
	    	android:key="@string/key_player1_name"
	    	android:title="@string/pref_player1_name"
        	android:capitalize="words"
        	android:defaultValue=""
        	android:singleLine="true"
        	android:selectAllOnFocus="true"
	    	/>
		<com.oliversride.wordryo.XWEditTextPreference
	    	android:key="@string/key_player2_name"
	     	android:title="@string/pref_player2_name"
         	android:capitalize="words"
	     	android:summary="@string/tell_unused"
	     	android:enabled="false"
        	android:singleLine="true"
        	android:selectAllOnFocus="true"
	     	/>
		<com.oliversride.wordryo.XWEditTextPreference 
	    	android:key="@string/key_player3_name"
	     	android:title="@string/pref_player3_name"
         	android:capitalize="words"
	     	android:defaultValue=""
	     	android:summary="@string/tell_unused"
	     	android:enabled="false"
        	android:singleLine="true"
        	android:selectAllOnFocus="true"
	     	/>
		<com.oliversride.wordryo.XWEditTextPreference
	    	android:key="@string/key_player4_name"
	     	android:title="@string/pref_player4_name"
         	android:capitalize="words"
	     	android:defaultValue=""
	     	android:summary="@string/tell_unused"
	     	android:enabled="false"
        	android:singleLine="true"
        	android:selectAllOnFocus="true"
	    	/>
	</PreferenceCategory>

	<PreferenceCategory android:title="@string/general_settings" >
		<CheckBoxPreference
			android:key="@string/key_keep_screenon"
            android:title="@string/keep_screenon"
            android:summary="@string/keep_screenon_summary"
            android:defaultValue="false"
            />
		<CheckBoxPreference
			android:key="warnunknownword"
            android:title="@string/warn_unknown"
            android:summary="@string/not_in_dictionary"
            android:defaultValue="false"
            />
		<CheckBoxPreference
			android:key="zoomondrop"
            android:title="@string/zoom_on_drop"
            android:summary="@string/zoom_summary"
            android:defaultValue="false"
            />
	</PreferenceCategory>

