<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/down"
        android:drawable="@drawable/vd_circle_arrow_down"
        android:state_checked="true" />

    <item
        android:id="@+id/up"
        android:drawable="@drawable/vd_circle_arrow_up" />

    <transition
        android:drawable="@drawable/avd_circle_arrow_down_to_up"
        android:fromId="@id/down"
        android:toId="@id/up" />

    <transition
        android:drawable="@drawable/avd_circle_arrow_up_to_down"
        android:fromId="@id/up"
        android:toId="@id/down" />

</animated-selector>